<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>ops-triage-assistant demo</title>
  <style>body{font-family:system-ui;max-width:900px;margin:24px auto;white-space:pre-wrap}</style>
</head>
<body>
  <h1>Ops Triage Report Demo</h1>
  <div id="app">Loading...</div>
  <script>
    fetch('./reports/report.json')
      .then(r => r.json())
      .then(data => {
        const pf = data.primary_finding;
        document.getElementById('app').textContent =
          `Primary: ${pf?.rule_id} (${pf?.severity})\n` +
          `Cause: ${pf?.root_cause}\n\n` +
          `Evidence:\n${pf?.evidence_snippet || ''}\n\n` +
          `Verify:\n- ${(pf?.verify_steps || []).join('\n- ')}\n\n` +
          `Fix:\n- ${(pf?.fix_steps || []).join('\n- ')}`;
      })
      .catch(e => document.getElementById('app').textContent = String(e));
  </script>
</body>
</html>
